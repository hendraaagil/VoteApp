<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".VoteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/txtVwHello"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="18dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Halo, fullName"
            android:textAlignment="center"
            android:textColor="@color/blue_700"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Tentukan Pilihanmu!"
            android:textAlignment="center"
            android:textColor="@color/blue_700"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="222dp"
                    android:src="@drawable/upinipin" />

                <TextView
                    android:id="@+id/txtVwNomor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="18dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="@color/blue_700"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtVwKetua"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Upin"
                    android:textAlignment="center"
                    android:textColor="@color/blue_700"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Ketua"
                    android:textAlignment="center"
                    android:textColor="@color/blue_700"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/txtVwWakil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Ipin"
                    android:textAlignment="center"
                    android:textColor="@color/blue_700"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Wakil Ketua"
                    android:textAlignment="center"
                    android:textColor="@color/blue_700"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btnDetail"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginHorizontal="8dp"
                    android:backgroundTint="@color/blue_700"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Detail"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="222dp"
                    android:src="@drawable/upinipin" />

                <TextView
                    android:id="@+id/txtVwNomor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="18dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="@color/blue_700"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtVwKetua"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Upin"
                    android:textAlignment="center"
                    android:textColor="@color/blue_700"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Ketua"
                    android:textAlignment="center"
                    android:textColor="@color/blue_700"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/txtVwWakil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Ipin"
                    android:textAlignment="center"
                    android:textColor="@color/blue_700"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Wakil Ketua"
                    android:textAlignment="center"
                    android:textColor="@color/blue_700"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btnDetail"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginHorizontal="8dp"
                    android:backgroundTint="@color/blue_700"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Detail"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>